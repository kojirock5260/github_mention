{
  "name": "kojirock5260/github-mention",
  "license": "MIT",
  "authors": [
    {
      "name": "kojirock5260",
      "email": "kojirock5260@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "polidog/php-chatwork-api": "^3.0.1",
    "pimple/pimple": "^v3.2.3",
    "maknz/slack": "^1.7.0",
    "nesbot/carbon": "^2.20.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^v2.15.1",
    "phpunit/phpunit": "^8.2.4",
    "mockery/mockery": "^1.2.2",
    "squizlabs/php_codesniffer": "^3.4.2"
  },
  "autoload": {
    "psr-4": {
      "Kojirock5260\\GithubMention\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kojirock5260\\GithubMention\\Test\\": "src/Test/"
    }
  },
  "scripts": {
    "csfix": [
      "php-cs-fixer fix"
    ],
    "phpcs": [
      "phpcs --standard=./phpcs.xml ./"
    ],
    "test": [
      "phpunit --configuration=phpunit.xml --coverage-html coverage"
    ]
  }
}
