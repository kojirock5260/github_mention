  "license": "MIT",
  "authors": [
    {
      "name": "kojirock5260",
      "email": "kojirock5260@gmail.com"
    }
  ],
  "require": {
    "polidog/php-chatwork-api": "^3.0.1",
    "pimple/pimple": "^v3.2.3",
    "maknz/slack": "^1.7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.14",
    "phpunit/phpunit": "^7.0",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "autoload": {
    "psr-4": {
      "Kojirock5260\\GithubMention\\": "src/"
    }
  },
  "scripts": {
    "csfix": [
      "php-cs-fixer fix"
    ],
    "test": [
      "phpunit --coverage-clover=coverage.xml --configuration=phpunit.xml"
    ],
    "phpcs": [
      "phpcs --standard=./phpcs.xml ./"
    ]
  }
}
